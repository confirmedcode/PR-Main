<head>
  <title>{{title}} - Privacy Review</title>
  
	<meta charset="utf-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  {{#if description }}
  <meta name="description" content="{{description}}">
  {{else}}
  <meta name="description" content="Are your apps secretly tracking you? See what your apps are doing behind your back.">
  {{/if}}
  {{#if author }}
  <meta name="author" content="{{author}}">
  {{else}}
  <meta name="author" content="Privacy Review">
  {{/if}}

	<meta property="og:type" content="product">
  {{#if title }}
	<meta property="og:title" content="{{title}} - Privacy Review">
  {{ else }}
  <meta property="og:title" content="Privacy Review">
  {{/if}}
  {{#if description }}
	<meta property="og:description" content="{{description}}">
  {{ else }}
	<meta property="og:description" content="Are your apps secretly tracking you? See what your apps are doing behind your back.">
  {{/if}}
	<meta property="og:url" content="https://privacyreview.co">
  {{#if metaimg }}
	<meta property="og:image" content="{{metaimg}}">
  {{ else if reviewdata }}
  <meta property="og:image" content="{{S3_BUCKET}}/images/preview-rating-{{reviewdata.rating}}.png">
  {{ else }}
	<meta property="og:image" content="{{S3_BUCKET}}/images/preview.png">
  {{/if}}
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@privacy_review">
  <meta name="twitter:creator" content="@privacy_review">
  {{#if title }}
	<meta property="twitter:title" content="{{title}} - Privacy Review">
  {{ else }}
  <meta property="twitter:title" content="Privacy Review">
  {{/if}}
  {{#if description }}
	<meta property="twitter:description" content="{{description}}">
  {{ else }}
	<meta property="twitter:description" content="Are your apps secretly tracking you? See what your apps are doing behind your back.">
  {{/if}}
  {{#if metaimg }}
	<meta property="twitter:image" content="{{metaimg}}">
  {{ else if reviewdata }}
  <meta property="og:image" content="{{S3_BUCKET}}/images/preview-rating-{{reviewdata.rating}}.png">
  {{ else }}
	<meta property="twitter:image" content="{{S3_BUCKET}}/images/preview.png">
  {{/if}}
  
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/privacyreview.css">
  <link rel="stylesheet" type="text/css" href="{{S3_BUCKET}}/css/font-awesome.min.css">
  
</head>